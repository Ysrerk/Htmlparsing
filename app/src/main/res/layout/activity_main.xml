    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/title"

         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/h1"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/p"></TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/img"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/lil"></TextView>
</LinearLayout>